
#-- SNIPPET GLOBALS --------------------------------------------------
global !p
from SnippetHelpers import (commentSymbol, titlePadding)

endglobal



#-- FILENAMES --------------------------------------------------------
snippet filename "Complete path to current file" b
`!p snip.rv=snip.fn`
endsnippet

snippet basename "Complete path to current file" b
`!p snip.rv=snip.basename`
endsnippet



#-- HEADERS ----------------------------------------------------------
snippet header "Snippet header" b
`!p snip.rv=commentSymbol(snip.ft)`-- ${1:`!p t[1]=t[1].upper()`} `!p snip.rv=titlePadding(t[1])`
endsnippet

snippet header.f "Snippet header with fold marker" b
`!p snip.rv=commentSymbol(snip.ft)`-- ${1:`!p t[1]=t[1].upper()`} `!p snip.rv=titlePadding(t[1], 'm')`{{{
${0:${VISUAL}}

`!p snip.rv=commentSymbol(snip.ft)` }}}
endsnippet

snippet subheader "Snippet subheader" b
`!p snip.rv=commentSymbol(snip.ft) + titlePadding(t[1])` ${1:`!p t[1]=t[1].title()`} --
endsnippet

snippet subheader.f "Snippet subheader with fold marker" b
`!p snip.rv=commentSymbol(snip.ft) + titlePadding(t[1], 'm')` ${1:`!p t[1]=t[1].title()`} --{{{
${0:${VISUAL}}

`!p snip.rv=commentSymbol(snip.ft)` }}}
endsnippet

